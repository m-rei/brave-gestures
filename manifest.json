
{
  "manifest_version": 3,

  "name": "Brave-Gestures",
  "description": "Clean, open source gesture extension",
  "version": "1.0.0",

  "permissions": [ "tabs", "history" ],

  "background": {
	  "service_worker": "service-worker.js"
  },
  
  "icons": {
	  "16": "icons/16.png",
	  "32": "icons/32.png",
	  "48": "icons/48.png",
	  "128": "icons/128.png"
  },

  "content_scripts": [
	  {
		  "matches": ["http://*/*", "https://*/*"],
		  "js": ["script.js"],
		  "match_about_blank": true
	  }
  ]
}
